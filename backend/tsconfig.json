{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/__tests__",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
